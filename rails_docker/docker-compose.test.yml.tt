version: '3.2'

services:
  db:
    image: postgres:12.1
    container_name: <%= APP_NAME %>_db
    environment:
      - POSTGRES_DB=<%= APP_NAME %>_test
    ports:
      - "5432"

  redis:
    image: redis:5.0.7
    container_name: <%= APP_NAME %>_redis
    ports:
      - "6379"

  test:
    build:
      context: .
      cache_from:
        - ${DOCKER_IMAGE}:${BRANCH_TAG}
      args:
        - RUBY_ENV=test
        - NODE_ENV=test
        - BUILD_ENV=test
    image: ${DOCKER_IMAGE}:${BRANCH_TAG}
    container_name: <%= APP_NAME %>_test
    command: bin/test.sh
    stdin_open: true
    tty: true
    depends_on:
      - db
    volumes:
      - "ruby-bundle:/bundle"
      - "${PWD}/tmp/screenshots:/<%= APP_NAME %>/tmp/screenshots"
      - "${PWD}/log:/<%= APP_NAME %>/log"
    environment:
      - RACK_ENV=test
      - RAILS_ENV=test
      - NODE_ENV=test
      - DB_HOST=db
      - CI=$CI
      - TEST_RETRY=$TEST_RETRY

volumes:
  ruby-bundle:
